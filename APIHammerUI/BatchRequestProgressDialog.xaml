<Window x:Class="APIHammerUI.BatchRequestProgressDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:APIHammerUI.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="{Binding TitleText}"
        Height="460" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#1E1E1E">

    <Grid Background="{StaticResource DarkBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{StaticResource DarkPanel}"
                BorderBrush="{StaticResource DarkBorder}"
                BorderThickness="0,0,0,1"
                Padding="20,16">
            <StackPanel>
                <TextBlock x:Name="TitleTextBlock"
                           Text="{Binding TitleText}"
                           FontSize="18"
                           FontWeight="Medium"
                           Foreground="{StaticResource TextPrimary}"/>
                <TextBlock x:Name="CollectionNameTextBlock"
                           Text="{Binding CollectionName, StringFormat='Collection: {0}'}"
                           FontSize="12"
                           Foreground="{StaticResource TextSecondary}"
                           Margin="0,4,0,0"/>
            </StackPanel>
        </Border>

        <!-- Progress Area -->
        <ScrollViewer Grid.Row="1" 
                      Margin="20"
                      VerticalScrollBarVisibility="Auto"
                      Background="{StaticResource DarkCard}"
                      BorderBrush="{StaticResource DarkBorder}"
                      BorderThickness="1">
            <StackPanel Margin="16">
                <!-- Overall Progress -->
                <TextBlock x:Name="OverallProgressTextBlock"
                           Text="{Binding OverallProgressText}"
                           FontSize="14"
                           FontWeight="Medium"
                           Foreground="{StaticResource TextPrimary}"
                           Margin="0,0,0,8"/>
                
                <ProgressBar x:Name="OverallProgressBar"
                             Height="8"
                             Background="{StaticResource DarkPanel}"
                             Foreground="{StaticResource AccentBlue}"
                             Margin="0,0,0,16"
                             Minimum="0" Maximum="100"
                             Value="{Binding OverallProgress}"/>

                <!-- Current Request -->
                <TextBlock Text="Current Request:"
                           FontSize="12"
                           FontWeight="Medium"
                           Foreground="{StaticResource TextSecondary}"
                           Margin="0,0,0,4"/>
                
                <TextBlock x:Name="CurrentRequestTextBlock"
                           Text="{Binding CurrentRequestText}"
                           FontSize="13"
                           Foreground="{StaticResource TextPrimary}"
                           Margin="0,0,0,16"/>

                <!-- Elapsed Time -->
                <TextBlock x:Name="ElapsedTimeTextBlock"
                           Text="{Binding ElapsedTimeText}"
                           FontSize="13"
                           Foreground="{StaticResource TextPrimary}"
                           Margin="0,0,0,16"/>

                <!-- Status Text -->
                <TextBlock x:Name="StatusTextBlock"
                           Text="{Binding StatusText}"
                           FontSize="13"
                           Foreground="{StaticResource TextPrimary}"
                           Margin="0,0,0,16"/>

                <!-- Statistics -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Total"
                                   FontSize="11"
                                   Foreground="{StaticResource TextMuted}"/>
                        <TextBlock x:Name="TotalRequestsTextBlock"
                                   Text="{Binding TotalRequests}"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource AccentBlue}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Completed"
                                   FontSize="11"
                                   Foreground="{StaticResource TextMuted}"/>
                        <TextBlock x:Name="CompletedRequestsTextBlock"
                                   Text="{Binding CompletedRequests}"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource AccentBlue}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Failed"
                                   FontSize="11"
                                   Foreground="{StaticResource TextMuted}"/>
                        <TextBlock x:Name="FailedRequestsTextBlock"
                                   Text="{Binding FailedRequests}"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource AccentBlue}"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="3" 
                Background="{StaticResource DarkPanel}"
                BorderBrush="{StaticResource DarkBorder}"
                BorderThickness="1,0,0,0"
                Padding="20,16">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="CancelButton"
                        Content="Cancel"
                        Style="{StaticResource ModernButtonStyle}"
                        Background="{StaticResource ErrorRed}"
                        Command="{Binding CancelCommand}"
                        Margin="0,0,12,0"/>
                <Button x:Name="CloseButton"
                        Content="Close"
                        Style="{StaticResource ModernButtonStyle}"
                        Command="{Binding CloseCommand}"
                        IsEnabled="{Binding IsCloseEnabled}"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>