<UserControl x:Class="APIHammerUI.Views.HttpRequestView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:behaviors="clr-namespace:APIHammerUI.Behaviors"
             xmlns:converters="clr-namespace:APIHammerUI.Converters"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             Background="#3C3C3C"
             Unloaded="HttpRequestView_Unloaded">

    <UserControl.Resources>
        <converters:CommandParameterConverter x:Key="CommandParameterConverter"/>
    </UserControl.Resources>

    <!-- Add keyboard shortcuts as InputBindings -->
    <UserControl.InputBindings>
        <KeyBinding Key="S" Modifiers="Ctrl" Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=ViewModel.SaveAsTextCommand}"/>
        <KeyBinding Key="J" Modifiers="Ctrl" Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=ViewModel.SaveAsJsonCommand}"/>
        <KeyBinding Key="C" Modifiers="Ctrl" Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=ViewModel.CopyResponseCommand}"/>
    </UserControl.InputBindings>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="300"/>
            </Grid.RowDefinitions>

            <!-- Request Section Header -->
            <TextBlock Grid.Row="0" 
                       Text="HTTP Request" 
                       FontSize="18" 
                       FontWeight="Medium"
                       Foreground="{StaticResource TextPrimary}"
                       Margin="0,0,0,20"/>

            <!-- URL and Method Row -->
            <Grid Grid.Row="1" 
                  Height="38"
                  Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="120"/>
                </Grid.ColumnDefinitions>

                <ComboBox Grid.Column="0" 
                          ItemsSource="{Binding Methods}" 
                          SelectedItem="{Binding Method}"
                          Style="{StaticResource DarkComboBoxStyle}"
                          Margin="0,0,12,0"/>

                <TextBox Grid.Column="1" 
                         Text="{Binding Url, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource DarkTextBoxStyle}"
                         Margin="0,0,12,0"
                         FontFamily="Consolas"/>

                <Button Grid.Column="2" 
                        Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=ViewModel.PreviewRequestCommand}"
                        Style="{StaticResource IconButtonStyle}"
                        Foreground="{StaticResource AccentBlue}"
                        Padding="12,8"
                        FontSize="12"
                        Margin="5,0,10,0"
                        ToolTip="Preview the complete HTTP request before sending">
                    <TextBlock Text="👁️" FontFamily="Segoe UI Emoji" FontSize="18" 
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Button>

                <Button Grid.Column="3" 
                        Content="{Binding IsLoading, Converter={StaticResource LoadingToButtonTextConverter}}" 
                        Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=ViewModel.SendRequestCommand}"
                        Style="{StaticResource SendButtonStyle}"/>
            </Grid>

            <!-- Full URL Display -->
            <StackPanel Grid.Row="2" Margin="0,0,0,20">
                <TextBlock Text="Full URL (with query parameters):" 
                           FontSize="12" 
                           Foreground="{StaticResource TextMuted}"
                           Margin="0,0,0,4"/>
                <Border Background="{StaticResource DarkBackground}"
                        BorderBrush="{StaticResource DarkBorder}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="12">
                    <TextBlock Text="{Binding FullUrl}"
                               FontFamily="Consolas"
                               FontSize="12"
                               Foreground="{StaticResource TextSecondary}"
                               TextWrapping="Wrap"/>
                </Border>
            </StackPanel>

            <!-- Request Configuration Tabs -->
            <TabControl Grid.Row="3" 
                        Background="{StaticResource DarkCard}"
                        BorderBrush="{StaticResource DarkBorder}"
                        BorderThickness="0"
                        Margin="0,0,0,24">
                <TabControl.Resources>
                    <!-- Tab Item Style -->
                    <Style TargetType="TabItem">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Padding" Value="16,12"/>
                        <Setter Property="Margin" Value="0,0,2,0"/>
                        <Setter Property="FontSize" Value="13"/>
                        <Setter Property="FontWeight" Value="Medium"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TabItem">
                                    <Border x:Name="Border"
                                            Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            Padding="{TemplateBinding Padding}"
                                            CornerRadius="6,6,0,0"
                                            Margin="{TemplateBinding Margin}">
                                        <ContentPresenter x:Name="ContentSite"
                                                        VerticalAlignment="Center"
                                                        HorizontalAlignment="Center"
                                                        ContentSource="Header"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="{StaticResource DarkCard}"/>
                                            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                                            <Setter Property="Panel.ZIndex" Value="100"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="{StaticResource DarkPanel}"/>
                                            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TabControl.Resources>

                <!-- Headers Tab with Suggestions -->
                <TabItem Header="Headers">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="300"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Headers Editor (Left Side) -->
                        <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto" Padding="16">
                            <StackPanel>
                                <Grid Margin="0,0,0,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Grid.Column="0"
                                               Text="Configure HTTP request headers" 
                                               FontSize="12" 
                                               Foreground="{StaticResource TextMuted}"/>
                                    
                                    <Button Grid.Column="1"
                                            Content="+ Add Header"
                                            Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=ViewModel.AddHeaderCommand}"
                                            Style="{StaticResource IconButtonStyle}"
                                            Foreground="{StaticResource AccentBlue}"
                                            Padding="8,4"
                                            FontSize="11"/>
                                </Grid>

                                <!-- Headers List -->
                                <ScrollViewer VerticalScrollBarVisibility="Auto"
                                              MaxHeight="300"
                                              Padding="16">
                                    <Border Background="{StaticResource DarkPanel}"
                                            BorderBrush="{StaticResource DarkBorder}"
                                            BorderThickness="1"
                                            CornerRadius="4"
                                            Padding="8">
                                        <StackPanel>
                                            <!-- Headers Items -->
                                            <ItemsControl ItemsSource="{Binding Headers}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Grid Margin="0,4">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>

                                                            <!-- Enable/Disable Checkbox -->
                                                            <CheckBox Grid.Column="0"
                                                                      IsChecked="{Binding IsEnabled}"
                                                                      Style="{StaticResource DarkCheckBoxStyle}"
                                                                      VerticalAlignment="Center"
                                                                      Margin="0,0,8,0"/>

                                                            <!-- Key TextBox -->
                                                            <TextBox Grid.Column="1"
                                                                     Text="{Binding Key, UpdateSourceTrigger=PropertyChanged}"
                                                                     Style="{StaticResource DarkTextBoxStyle}"
                                                                     Margin="0,0,8,0"
                                                                     Tag="Key">
                                                                <i:Interaction.Behaviors>
                                                                    <behaviors:GotFocusBehavior Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=ViewModel.HeaderFocusCommand}"/>
                                                                </i:Interaction.Behaviors>
                                                            </TextBox>

                                                            <!-- Value TextBox -->
                                                            <TextBox Grid.Column="2"
                                                                     Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}"
                                                                     Style="{StaticResource DarkTextBoxStyle}"
                                                                     Margin="0,0,8,0"
                                                                     Tag="Value">
                                                                <i:Interaction.Behaviors>
                                                                    <behaviors:GotFocusBehavior Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=ViewModel.HeaderFocusCommand}"/>
                                                                </i:Interaction.Behaviors>
                                                            </TextBox>

                                                            <!-- Delete Button -->
                                                            <Button Grid.Column="3"
                                                                    Content="X"
                                                                    Style="{StaticResource DeleteButtonStyle}"
                                                                    Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=ViewModel.DeleteHeaderCommand}"
                                                                    CommandParameter="{Binding}"/>
                                                        </Grid>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                    </Border>
                                </ScrollViewer>
                            </StackPanel>
                        </ScrollViewer>

                        <!-- Header Suggestions Panel (Right Side) -->
                        <Border Grid.Column="1" 
                                Background="{StaticResource DarkBackground}"
                                BorderBrush="{StaticResource DarkBorder}"
                                BorderThickness="1,0,0,0"
                                MaxHeight="300"
                                Padding="16">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <StackPanel>
                                    <TextBlock Text="Common Headers" 
                                               FontSize="13" 
                                               FontWeight="Medium"
                                               Foreground="{StaticResource TextPrimary}"
                                               Margin="0,0,0,12"/>
                                    
                                    <TextBlock Text="Click any header below to add it quickly" 
                                               FontSize="11" 
                                               Foreground="{StaticResource TextMuted}"
                                               Margin="0,0,0,16"/>

                                    <!-- Content Headers -->
                                    <StackPanel Margin="0,0,0,16">
                                        <TextBlock Text="Content" FontWeight="Medium" Foreground="{StaticResource TextPrimary}" FontSize="12" Margin="0,0,0,8"/>
                                        <Button Content="Content-Type" 
                                                Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=ViewModel.QuickAddHeaderCommand}" 
                                                CommandParameter="Content-Type" 
                                                Style="{StaticResource HeaderSuggestionStyle}"/>
                                        <Button Content="Content-Length" 
                                                Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=ViewModel.QuickAddHeaderCommand}" 
                                                CommandParameter="Content-Length" 
                                                Style="{StaticResource HeaderSuggestionStyle}"/>
                                        <Button Content="Content-Encoding" 
                                                Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=ViewModel.QuickAddHeaderCommand}" 
                                                CommandParameter="Content-Encoding" 
                                                Style="{StaticResource HeaderSuggestionStyle}"/>
                                        <Button Content="Content-Disposition" 
                                                Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=ViewModel.QuickAddHeaderCommand}" 
                                                CommandParameter="Content-Disposition" 
                                                Style="{StaticResource HeaderSuggestionStyle}"/>
                                    </StackPanel>

                                    <!-- Accept Headers -->
                                    <StackPanel Margin="0,0,0,16">
                                        <TextBlock Text="Accept" FontWeight="Medium" Foreground="{StaticResource TextPrimary}" FontSize="12" Margin="0,0,0,8"/>
                                        <Button Content="Accept" 
                                                Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=ViewModel.QuickAddHeaderCommand}" 
                                                CommandParameter="Accept" 
                                                Style="{StaticResource HeaderSuggestionStyle}"/>
                                        <Button Content="Accept-Encoding" 
                                                Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=ViewModel.QuickAddHeaderCommand}" 
                                                CommandParameter="Accept-Encoding" 
                                                Style="{StaticResource HeaderSuggestionStyle}"/>
                                        <Button Content="Accept-Language" 
                                                Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=ViewModel.QuickAddHeaderCommand}" 
                                                CommandParameter="Accept-Language" 
                                                Style="{StaticResource HeaderSuggestionStyle}"/>
                                    </StackPanel>

                                    <!-- Authentication Headers -->
                                    <StackPanel Margin="0,0,0,16">
                                        <TextBlock Text="Authentication" FontWeight="Medium" Foreground="{StaticResource TextPrimary}" FontSize="12" Margin="0,0,0,8"/>
                                        <Button Content="Authorization" 
                                                Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=ViewModel.QuickAddHeaderCommand}" 
                                                CommandParameter="Authorization" 
                                                Style="{StaticResource HeaderSuggestionStyle}"/>
                                        <Button Content="WWW-Authenticate" 
                                                Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=ViewModel.QuickAddHeaderCommand}" 
                                                CommandParameter="WWW-Authenticate" 
                                                Style="{StaticResource HeaderSuggestionStyle}"/>
                                    </StackPanel>

                                    <!-- CORS Headers -->
                                    <StackPanel Margin="0,0,0,16">
                                        <TextBlock Text="CORS" FontWeight="Medium" Foreground="{StaticResource TextPrimary}" FontSize="12" Margin="0,0,0,8"/>
                                        <Button Content="Access-Control-Allow-Origin" 
                                                Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=ViewModel.QuickAddHeaderCommand}" 
                                                CommandParameter="Access-Control-Allow-Origin" 
                                                Style="{StaticResource HeaderSuggestionStyle}"/>
                                        <Button Content="Access-Control-Allow-Methods" 
                                                Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=ViewModel.QuickAddHeaderCommand}" 
                                                CommandParameter="Access-Control-Allow-Methods" 
                                                Style="{StaticResource HeaderSuggestionStyle}"/>
                                        <Button Content="Access-Control-Allow-Headers" 
                                                Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=ViewModel.QuickAddHeaderCommand}" 
                                                CommandParameter="Access-Control-Allow-Headers" 
                                                Style="{StaticResource HeaderSuggestionStyle}"/>
                                        <Button Content="Origin" 
                                                Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=ViewModel.QuickAddHeaderCommand}" 
                                                CommandParameter="Origin" 
                                                Style="{StaticResource HeaderSuggestionStyle}"/>
                                    </StackPanel>

                                    <!-- Custom/API Headers -->
                                    <StackPanel Margin="0,0,0,16">
                                        <TextBlock Text="Custom/API" FontWeight="Medium" Foreground="{StaticResource TextPrimary}" FontSize="12" Margin="0,0,0,8"/>
                                        <Button Content="X-API-Key" 
                                                Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=ViewModel.QuickAddHeaderCommand}" 
                                                CommandParameter="X-API-Key" 
                                                Style="{StaticResource HeaderSuggestionStyle}"/>
                                        <Button Content="X-Auth-Token" 
                                                Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=ViewModel.QuickAddHeaderCommand}" 
                                                CommandParameter="X-Auth-Token" 
                                                Style="{StaticResource HeaderSuggestionStyle}"/>
                                        <Button Content="X-Requested-With" 
                                                Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=ViewModel.QuickAddHeaderCommand}" 
                                                CommandParameter="X-Requested-With" 
                                                Style="{StaticResource HeaderSuggestionStyle}"/>
                                        <Button Content="X-Request-ID" 
                                                Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=ViewModel.QuickAddHeaderCommand}" 
                                                CommandParameter="X-Request-ID" 
                                                Style="{StaticResource HeaderSuggestionStyle}"/>
                                    </StackPanel>

                                    <!-- Caching Headers -->
                                    <StackPanel Margin="0,0,0,16">
                                        <TextBlock Text="Caching" FontWeight="Medium" Foreground="{StaticResource TextPrimary}" FontSize="12" Margin="0,0,0,8"/>
                                        <Button Content="Cache-Control" 
                                                Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=ViewModel.QuickAddHeaderCommand}" 
                                                CommandParameter="Cache-Control" 
                                                Style="{StaticResource HeaderSuggestionStyle}"/>
                                        <Button Content="ETag" 
                                                Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=ViewModel.QuickAddHeaderCommand}" 
                                                CommandParameter="ETag" 
                                                Style="{StaticResource HeaderSuggestionStyle}"/>
                                        <Button Content="If-None-Match" 
                                                Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=ViewModel.QuickAddHeaderCommand}" 
                                                CommandParameter="If-None-Match" 
                                                Style="{StaticResource HeaderSuggestionStyle}"/>
                                        <Button Content="Last-Modified" 
                                                Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=ViewModel.QuickAddHeaderCommand}" 
                                                CommandParameter="Last-Modified" 
                                                Style="{StaticResource HeaderSuggestionStyle}"/>
                                    </StackPanel>
                                </StackPanel>
                            </ScrollViewer>
                        </Border>
                    </Grid>
                </TabItem>

                <!-- Authentication Tab -->
                <TabItem Header="Authentication">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="16">
                        <StackPanel>
                            <TextBlock Text="Configure request authentication" 
                                       FontSize="12" 
                                       Foreground="{StaticResource TextMuted}"
                                       Margin="0,0,0,16"/>

                            <Border Background="{StaticResource DarkPanel}"
                                    BorderBrush="{StaticResource DarkBorder}"
                                    BorderThickness="1"
                                    CornerRadius="4"
                                    Padding="16">
                                <StackPanel>
                                    <!-- Authentication Type -->
                                    <Grid Margin="0,0,0,12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <TextBlock Grid.Column="0" 
                                                   Text="Type:" 
                                                   VerticalAlignment="Center"
                                                   Foreground="{StaticResource TextSecondary}"/>
                                        
                                        <ComboBox Grid.Column="1"
                                                  ItemsSource="{Binding AuthenticationTypes}"
                                                  SelectedItem="{Binding Authentication.Type}"
                                                  Style="{StaticResource DarkComboBoxStyle}"
                                                  DisplayMemberPath="."/>
                                    </Grid>

                                    <!-- Basic Authentication -->
                                    <StackPanel Visibility="{Binding Authentication.Type, Converter={StaticResource AuthTypeToVisibilityConverter}, ConverterParameter=BasicAuth}">
                                        <Grid Margin="0,0,0,8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="120"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <TextBlock Grid.Column="0" 
                                                       Text="Username:" 
                                                       VerticalAlignment="Center"
                                                       Foreground="{StaticResource TextSecondary}"/>
                                            
                                            <TextBox Grid.Column="1"
                                                     Text="{Binding Authentication.Username, UpdateSourceTrigger=PropertyChanged}"
                                                     Style="{StaticResource DarkTextBoxStyle}"/>
                                        </Grid>
                                        
                                        <Grid Margin="0,0,0,8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="120"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <TextBlock Grid.Column="0" 
                                                       Text="Password:" 
                                                       VerticalAlignment="Center"
                                                       Foreground="{StaticResource TextSecondary}"/>
                                            
                                            <PasswordBox Grid.Column="1"
                                                         x:Name="PasswordBox"
                                                         Background="{StaticResource DarkPanel}"
                                                         Foreground="{StaticResource TextPrimary}"
                                                         BorderBrush="{StaticResource DarkBorder}"
                                                         BorderThickness="1"
                                                         Padding="8"
                                                         Height="32"
                                                         FontSize="12">
                                                <i:Interaction.Behaviors>
                                                    <behaviors:PasswordBoxPasswordChangedBehavior Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=ViewModel.PasswordChangedCommand}"/>
                                                </i:Interaction.Behaviors>
                                            </PasswordBox>
                                        </Grid>
                                    </StackPanel>

                                    <!-- Bearer Token -->
                                    <StackPanel Visibility="{Binding Authentication.Type, Converter={StaticResource AuthTypeToVisibilityConverter}, ConverterParameter=BearerToken}">
                                        <Grid Margin="0,0,0,8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="120"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <TextBlock Grid.Column="0" 
                                                       Text="Token:" 
                                                       VerticalAlignment="Center"
                                                       Foreground="{StaticResource TextSecondary}"/>
                                            
                                            <TextBox Grid.Column="1"
                                                     AcceptsReturn="True"
                                                     Height="100"
                                                     TextWrapping="Wrap"
                                                     Text="{Binding Authentication.Token, UpdateSourceTrigger=PropertyChanged}"
                                                     Style="{StaticResource DarkTextBoxStyle}"
                                                     FontFamily="Consolas"/>
                                        </Grid>
                                    </StackPanel>

                                    <!-- API Key -->
                                    <StackPanel Visibility="{Binding Authentication.Type, Converter={StaticResource AuthTypeToVisibilityConverter}, ConverterParameter=ApiKey}">
                                        <Grid Margin="0,0,0,8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="120"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <TextBlock Grid.Column="0" 
                                                       Text="Header Name:" 
                                                       VerticalAlignment="Center"
                                                       Foreground="{StaticResource TextSecondary}"/>
                                            
                                            <TextBox Grid.Column="1"
                                                     Text="{Binding Authentication.ApiKeyHeader, UpdateSourceTrigger=PropertyChanged}"
                                                     Style="{StaticResource DarkTextBoxStyle}"/>
                                        </Grid>
                                        
                                        <Grid Margin="0,0,0,8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="120"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <TextBlock Grid.Column="0" 
                                                       Text="API Key:" 
                                                       VerticalAlignment="Center"
                                                       Foreground="{StaticResource TextSecondary}"/>
                                            
                                            <TextBox Grid.Column="1"
                                                     Text="{Binding Authentication.ApiKeyValue, UpdateSourceTrigger=PropertyChanged}"
                                                     Style="{StaticResource DarkTextBoxStyle}"
                                                     FontFamily="Consolas"/>
                                        </Grid>
                                    </StackPanel>

                                    <!-- No Authentication Message -->
                                    <TextBlock Visibility="{Binding Authentication.Type, Converter={StaticResource AuthTypeToVisibilityConverter}, ConverterParameter=None}"
                                               Text="No authentication required for this request."
                                               Foreground="{StaticResource TextMuted}"
                                               FontStyle="Italic"
                                               Margin="0,8"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <!-- Query Parameters Tab -->
                <TabItem Header="Query Parameters">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="16">
                        <StackPanel>
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0"
                                           Text="Configure URL query parameters" 
                                           FontSize="12" 
                                           Foreground="{StaticResource TextMuted}"/>
                                
                                <Button Grid.Column="1"
                                        Content="+ Add Parameter"
                                        Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=ViewModel.AddQueryParameterCommand}"
                                        Style="{StaticResource IconButtonStyle}"
                                        Foreground="{StaticResource AccentBlue}"
                                        Padding="8,4"
                                        FontSize="11"/>
                            </Grid>

                            <!-- Query Parameters List -->
                            <Border Background="{StaticResource DarkPanel}"
                                    BorderBrush="{StaticResource DarkBorder}"
                                    BorderThickness="1"
                                    CornerRadius="4"
                                    Padding="8">
                                <StackPanel>
                                    <!-- Parameter Headers -->
                                    <Grid Margin="0,0,0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" Text="" Width="24"/>
                                        <TextBlock Grid.Column="1" 
                                                   Text="Parameter" 
                                                   Foreground="{StaticResource TextMuted}"
                                                   FontSize="11"
                                                   FontWeight="Medium"
                                                   Margin="8,0"/>
                                        <TextBlock Grid.Column="2" 
                                                   Text="Value" 
                                                   Foreground="{StaticResource TextMuted}"
                                                   FontSize="11"
                                                   FontWeight="Medium"
                                                   Margin="8,0"/>
                                        <TextBlock Grid.Column="3" Text="" Width="24"/>
                                    </Grid>

                                    <!-- Query Parameters Items -->
                                    <ItemsControl ItemsSource="{Binding QueryParameters}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Margin="0,4">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <!-- Enable/Disable Checkbox -->
                                                    <CheckBox Grid.Column="0"
                                                              IsChecked="{Binding IsEnabled}"
                                                              Style="{StaticResource DarkCheckBoxStyle}"
                                                              VerticalAlignment="Center"
                                                              Margin="0,0,8,0"/>

                                                    <!-- Key TextBox -->
                                                    <TextBox Grid.Column="1"
                                                             Text="{Binding Key, UpdateSourceTrigger=PropertyChanged}"
                                                             Style="{StaticResource DarkTextBoxStyle}"
                                                             Margin="0,0,8,0"
                                                             Tag="Parameter">
                                                        <i:Interaction.Behaviors>
                                                            <behaviors:GotFocusBehavior Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=ViewModel.QueryParameterFocusCommand}"/>
                                                        </i:Interaction.Behaviors>
                                                    </TextBox>

                                                    <!-- Value TextBox -->
                                                    <TextBox Grid.Column="2"
                                                             Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}"
                                                             Style="{StaticResource DarkTextBoxStyle}"
                                                             Margin="0,0,8,0"
                                                             Tag="Value">
                                                        <i:Interaction.Behaviors>
                                                            <behaviors:GotFocusBehavior Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=ViewModel.QueryParameterFocusCommand}"/>
                                                        </i:Interaction.Behaviors>
                                                    </TextBox>

                                                    <!-- Delete Button -->
                                                    <Button Grid.Column="3"
                                                            Content="X"
                                                            Style="{StaticResource DeleteButtonStyle}"
                                                            Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=ViewModel.DeleteQueryParameterCommand}"
                                                            CommandParameter="{Binding}"/>
                                                </Grid>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <!-- Body Tab -->
                <TabItem Header="Body">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="16">
                        <StackPanel>
                            <TextBlock Text="Configure request body content" 
                                       FontSize="12" 
                                       Foreground="{StaticResource TextMuted}"
                                       Margin="0,0,0,12"/>
                            
                            <TextBox Text="{Binding Body, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource DarkTextBoxStyle}"
                                     Height="300"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     VerticalScrollBarVisibility="Auto"
                                     FontFamily="Consolas"
                                     FontSize="12"/>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>
            </TabControl>

            <!-- Response Section Header -->
            <Grid Grid.Row="4" Margin="0,0,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="Response" 
                           FontSize="14" 
                           FontWeight="Medium" 
                           VerticalAlignment="Center"
                           Foreground="{StaticResource TextPrimary}"/>

                <!-- Save Response Buttons -->
                <StackPanel Grid.Column="1" 
                           Orientation="Horizontal"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"
                           Margin="0,0,12,0">

                    <Button Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=ViewModel.SaveAsJsonCommand}"
                            Style="{StaticResource IconButtonStyle}"
                            Foreground="{StaticResource AccentBlue}"
                            Padding="8,4"
                            FontSize="11"
                            Margin="0,0,8,0"
                            ToolTip="Save response body as JSON file&#x0a;Keyboard: Ctrl+J"
                            Visibility="{Binding Response, Converter={StaticResource NotNullToVisibilityConverter}}">
                        <materialIcons:MaterialIcon Kind="CodeJson" Height="30" />
                    </Button>

                    <Button Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=ViewModel.SaveAsTextCommand}"
                            Style="{StaticResource IconButtonStyle}"
                            Foreground="{StaticResource AccentBlue}"
                            Padding="8,4"
                            FontSize="11"
                            ToolTip="Save full response (headers + body) as text file&#x0a;Keyboard: Ctrl+S"
                            Visibility="{Binding Response, Converter={StaticResource NotNullToVisibilityConverter}}">
                        <TextBlock Text="📄 Save Text" FontFamily="Segoe UI Emoji" FontSize="18" />
                    </Button>
                </StackPanel>

                <!-- Response Metadata -->
                <StackPanel Grid.Column="2" 
                           Orientation="Horizontal"
                           VerticalAlignment="Center">

                    <!-- Response Time -->
                    <Border Background="{StaticResource DarkCard}"
                            BorderBrush="{StaticResource DarkBorder}"
                            BorderThickness="1"
                            CornerRadius="3"
                            Padding="8,4"
                            Margin="0,0,8,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Time"
                                       FontSize="10"
                                       FontWeight="Bold"
                                       Margin="0,0,4,0"
                                       VerticalAlignment="Center"
                                       Foreground="{StaticResource TextMuted}"/>
                            <TextBlock Text="{Binding ResponseTimeFormatted, Mode=OneWay}"
                                       FontSize="11"
                                       FontWeight="Medium"
                                       Foreground="{StaticResource AccentBlue}"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Response Size -->
                    <Border Background="{StaticResource DarkCard}"
                            BorderBrush="{StaticResource DarkBorder}"
                            BorderThickness="1"
                            CornerRadius="3"
                            Padding="8,4"
                            Margin="0,0,8,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Size"
                                       FontSize="10"
                                       FontWeight="Bold"
                                       Margin="0,0,4,0"
                                       VerticalAlignment="Center"
                                       Foreground="{StaticResource TextMuted}"/>
                            <TextBlock Text="{Binding ResponseSizeFormatted, Mode=OneWay}"
                                       FontSize="11"
                                       FontWeight="Medium"
                                       Foreground="{StaticResource SuccessGreen}"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Request DateTime -->
                    <Border Background="{StaticResource DarkCard}"
                            BorderBrush="{StaticResource DarkBorder}"
                            BorderThickness="1"
                            CornerRadius="3"
                            Padding="8,4"
                            Margin="0,0,8,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Sent"
                                       FontSize="10"
                                       FontWeight="Bold"
                                       Margin="0,0,4,0"
                                       VerticalAlignment="Center"
                                       Foreground="{StaticResource TextMuted}"/>
                            <TextBlock Text="{Binding RequestDateTimeFormatted, Mode=OneWay}"
                                       FontSize="11"
                                       FontWeight="Medium"
                                       Foreground="{StaticResource TextSecondary}"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>

            <!-- Response Section -->
            <Border Grid.Row="5"
                    Background="{StaticResource DarkBackground}"
                    BorderBrush="{StaticResource DarkBorder}"
                    BorderThickness="1"
                    CornerRadius="4"
                    MinHeight="200">
                <ScrollViewer VerticalScrollBarVisibility="Auto" 
                              HorizontalScrollBarVisibility="Auto"
                              VirtualizingPanel.IsVirtualizing="True"
                              VirtualizingPanel.VirtualizationMode="Recycling">
                    <TextBox Text="{Binding TruncatedResponse}"
                             IsReadOnly="True"
                             Background="Transparent"
                             Foreground="{StaticResource TextSecondary}"
                             BorderThickness="0"
                             TextWrapping="Wrap"
                             Padding="12"
                             FontFamily="Consolas"
                             FontSize="12"
                             VirtualizingPanel.IsVirtualizing="True">
                        <TextBox.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Copy Response" Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=ViewModel.CopyResponseCommand}">
                                    <MenuItem.Icon>
                                        <TextBlock Text="📋" FontFamily="Segoe UI Emoji"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <Separator/>
                                <MenuItem Header="Save as JSON..." Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=ViewModel.SaveAsJsonCommand}">
                                    <MenuItem.Icon>
                                        <TextBlock Text="💾" FontFamily="Segoe UI Emoji"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Header="Save as Text..." Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=ViewModel.SaveAsTextCommand}">
                                    <MenuItem.Icon>
                                        <TextBlock Text="📄" FontFamily="Segoe UI Emoji"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                            </ContextMenu>
                        </TextBox.ContextMenu>
                    </TextBox>
                </ScrollViewer>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>