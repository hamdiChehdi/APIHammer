<Window x:Class="APIHammerUI.ImportOpenApiDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
        Title="Import OpenAPI Collection" 
        Height="600" Width="600"
        WindowStartupLocation="CenterOwner"
        Background="#1E1E1E">
    
    <Window.Resources>
       

        <!-- RadioButton Style -->
        <Style TargetType="RadioButton">
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,8,0,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <Border Grid.Column="0"
                                    Width="16" Height="16"
                                    BorderBrush="{StaticResource DarkBorder}"
                                    BorderThickness="2"
                                    CornerRadius="8"
                                    Background="{StaticResource DarkPanel}"
                                    Margin="0,0,8,0">
                                <Ellipse x:Name="InnerCircle"
                                         Width="6" Height="6"
                                         Fill="{StaticResource AccentBlue}"
                                         Visibility="Collapsed"/>
                            </Border>
                            
                            <ContentPresenter Grid.Column="1"
                                              VerticalAlignment="Center"/>
                        </Grid>
                        
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="InnerCircle" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock Text="Import OpenAPI Collection" 
                       FontSize="20" 
                       FontWeight="Light"
                       Foreground="{StaticResource TextPrimary}"
                       Margin="0,0,0,8"/>
            <TextBlock Text="Import HTTP requests from an OpenAPI (Swagger) specification file or URL" 
                       FontSize="13" 
                       Foreground="{StaticResource TextMuted}"/>
        </StackPanel>

        <!-- Import Options -->
        <Border Grid.Row="1" 
                Background="{StaticResource DarkCard}"
                BorderBrush="{StaticResource DarkBorder}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="20">
            <StackPanel>
                <!-- Import Source Selection -->
                <TextBlock Text="Import Source" 
                           FontSize="14" 
                           FontWeight="Medium"
                           Foreground="{StaticResource TextPrimary}"
                           Margin="0,0,0,16"/>

                <RadioButton x:Name="FileRadio" 
                             Content="Import from file" 
                             IsChecked="True"
                             Checked="ImportSource_Changed"/>

                <RadioButton x:Name="UrlRadio" 
                             Content="Import from URL" 
                             Checked="ImportSource_Changed"/>

                <!-- File Import Section -->
                <StackPanel x:Name="FileImportPanel" Margin="0,20,0,0">
                    <TextBlock Text="OpenAPI File Path" 
                               FontSize="12" 
                               Foreground="{StaticResource TextSecondary}"
                               Margin="0,0,0,8"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBox x:Name="FilePathTextBox"
                                 Grid.Column="0"
                                 Style="{StaticResource DarkTextBoxStyle}"
                                 Margin="0,0,8,0"
                                 Text="{Binding FilePath, UpdateSourceTrigger=PropertyChanged}"
                                 TextChanged="InputField_TextChanged"/>
                        
                        <Button x:Name="BrowseButton"
                                Grid.Column="1"
                                Content="Browse..."
                                Style="{StaticResource SecondaryButtonStyle}"
                                Click="Browse_Click"
                                Padding="12,6"/>
                    </Grid>
                </StackPanel>

                <!-- URL Import Section -->
                <StackPanel x:Name="UrlImportPanel" 
                            Margin="0,20,0,0"
                            Visibility="Collapsed">
                    <TextBlock Text="OpenAPI URL" 
                               FontSize="12" 
                               Foreground="{StaticResource TextSecondary}"
                               Margin="0,0,0,8"/>
                    
                    <TextBox x:Name="UrlTextBox"
                             Style="{StaticResource DarkTextBoxStyle}"
                             Text="{Binding Url, UpdateSourceTrigger=PropertyChanged}"
                             TextChanged="InputField_TextChanged"/>
                    
                    <TextBlock Text="Example: https://petstore.swagger.io/v2/swagger.json" 
                               FontSize="11" 
                               Foreground="{StaticResource TextMuted}"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <!-- Collection Name -->
                <StackPanel Margin="0,24,0,0">
                    <TextBlock Text="Collection Name (Optional)" 
                               FontSize="12" 
                               Foreground="{StaticResource TextSecondary}"
                               Margin="0,0,0,8"/>
                    
                    <TextBox x:Name="CollectionNameTextBox"
                             Style="{StaticResource DarkTextBoxStyle}"
                             Text="{Binding CollectionName, UpdateSourceTrigger=PropertyChanged}"/>
                    
                    <TextBlock Text="Leave empty to use the API title from the OpenAPI specification" 
                               FontSize="11" 
                               Foreground="{StaticResource TextMuted}"
                               Margin="0,4,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Status/Progress -->
        <Border x:Name="StatusPanel" 
                Grid.Row="2" 
                Background="{StaticResource DarkPanel}"
                BorderBrush="{StaticResource DarkBorder}"
                BorderThickness="1"
                CornerRadius="4"
                Padding="12"
                Margin="0,16,0,0"
                Visibility="Collapsed">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <materialIcons:MaterialIcon x:Name="StatusIcon"
                                            Grid.Column="0"
                                            Kind="Information"
                                            Width="16"
                                            Height="16"
                                            Foreground="{StaticResource AccentBlue}"
                                            Margin="0,0,8,0"
                                            VerticalAlignment="Center"/>
                
                <TextBlock x:Name="StatusText"
                           Grid.Column="1"
                           Text="Status message"
                           FontSize="12"
                           Foreground="{StaticResource TextSecondary}"
                           VerticalAlignment="Center"
                           TextWrapping="Wrap"/>
            </Grid>
        </Border>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,20,0,0">
            <Button Content="Cancel" 
                    Style="{StaticResource SecondaryButtonStyle}"
                    Click="Cancel_Click"
                    Margin="0,0,12,0"
                    Padding="20,8"
                    MinWidth="80"/>
            
            <Button x:Name="ImportButton"
                    Content="Import"
                    Style="{StaticResource ModernButtonStyle}"
                    Click="Import_Click"
                    IsEnabled="False"
                    Padding="20,8"
                    MinWidth="80"/>
        </StackPanel>
    </Grid>
</Window>