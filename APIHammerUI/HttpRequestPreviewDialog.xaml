<Window x:Class="APIHammerUI.HttpRequestPreviewDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="HTTP Request Preview" 
        Height="600" 
        Width="800"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource DarkBackground}">
    
    <Window.Resources>
        <!-- Dark Theme Color Resources -->
        <SolidColorBrush x:Key="DarkBackground" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="DarkPanel" Color="#2D2D2D"/>
        <SolidColorBrush x:Key="DarkCard" Color="#3C3C3C"/>
        <SolidColorBrush x:Key="DarkBorder" Color="#404040"/>
        <SolidColorBrush x:Key="AccentBlue" Color="#007ACC"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#CCCCCC"/>
        <SolidColorBrush x:Key="TextMuted" Color="#999999"/>
        <SolidColorBrush x:Key="SuccessGreen" Color="#4CAF50"/>
        <SolidColorBrush x:Key="WarningOrange" Color="#FF9800"/>
        
        <!-- Button Style -->
        <Style x:Key="PreviewButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentBlue}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1F85CC"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#0F5A99"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0">
                <TextBlock Text="HTTP Request Preview" 
                           FontSize="18" 
                           FontWeight="Medium"
                           Foreground="{StaticResource TextPrimary}"
                           Margin="0,0,0,4"/>
                <TextBlock Text="Review the complete HTTP request that will be sent to the API" 
                           FontSize="12" 
                           Foreground="{StaticResource TextMuted}"/>
            </StackPanel>
            
            <!-- Method Badge -->
            <Border Grid.Column="1"
                    Background="{Binding MethodColor}"
                    CornerRadius="4"
                    Padding="12,6"
                    VerticalAlignment="Center">
                <TextBlock Text="{Binding Method}"
                           FontSize="12"
                           FontWeight="Bold"
                           Foreground="White"/>
            </Border>
        </Grid>
        
        <!-- Content -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      Background="{StaticResource DarkCard}"
                      BorderBrush="{StaticResource DarkBorder}"
                      BorderThickness="1">
            <StackPanel Margin="16">
                
                <!-- URL Section -->
                <Border Background="{StaticResource DarkPanel}"
                        BorderBrush="{StaticResource DarkBorder}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="12"
                        Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Request URL" 
                                   FontSize="14" 
                                   FontWeight="Medium"
                                   Foreground="{StaticResource AccentBlue}"
                                   Margin="0,0,0,8"/>
                        <TextBox Text="{Binding FullUrl, Mode=OneWay}"
                                 IsReadOnly="True"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 FontFamily="Consolas"
                                 FontSize="12"
                                 Foreground="{StaticResource TextPrimary}"
                                 TextWrapping="Wrap"
                                 Padding="0"/>
                    </StackPanel>
                </Border>
                
                <!-- Headers Section -->
                <Border Background="{StaticResource DarkPanel}"
                        BorderBrush="{StaticResource DarkBorder}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="12"
                        Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Headers" 
                                   FontSize="14" 
                                   FontWeight="Medium"
                                   Foreground="{StaticResource AccentBlue}"
                                   Margin="0,0,0,8"/>
                        <TextBox x:Name="HeadersTextBox"
                                 IsReadOnly="True"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 FontFamily="Consolas"
                                 FontSize="11"
                                 Foreground="{StaticResource TextSecondary}"
                                 TextWrapping="Wrap"
                                 MinHeight="60"
                                 Padding="0"/>
                    </StackPanel>
                </Border>
                
                <!-- Authentication Section -->
                <Border Background="{StaticResource DarkPanel}"
                        BorderBrush="{StaticResource DarkBorder}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="12"
                        Margin="0,0,0,16"
                        x:Name="AuthSection">
                    <StackPanel>
                        <TextBlock Text="Authentication" 
                                   FontSize="14" 
                                   FontWeight="Medium"
                                   Foreground="{StaticResource AccentBlue}"
                                   Margin="0,0,0,8"/>
                        <TextBox x:Name="AuthTextBox"
                                 IsReadOnly="True"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 FontFamily="Consolas"
                                 FontSize="11"
                                 Foreground="{StaticResource TextSecondary}"
                                 TextWrapping="Wrap"
                                 Padding="0"/>
                    </StackPanel>
                </Border>
                
                <!-- Body Section -->
                <Border Background="{StaticResource DarkPanel}"
                        BorderBrush="{StaticResource DarkBorder}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="12"
                        x:Name="BodySection">
                    <StackPanel>
                        <TextBlock Text="Request Body" 
                                   FontSize="14" 
                                   FontWeight="Medium"
                                   Foreground="{StaticResource AccentBlue}"
                                   Margin="0,0,0,8"/>
                        <TextBox x:Name="BodyTextBox"
                                 IsReadOnly="True"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 FontFamily="Consolas"
                                 FontSize="11"
                                 Foreground="{StaticResource TextSecondary}"
                                 TextWrapping="Wrap"
                                 MinHeight="100"
                                 VerticalScrollBarVisibility="Auto"
                                 Padding="0"/>
                    </StackPanel>
                </Border>
                
            </StackPanel>
        </ScrollViewer>
        
        <!-- Footer Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button Content="Copy to Clipboard" 
                    Click="CopyToClipboard_Click"
                    Style="{StaticResource PreviewButtonStyle}"
                    Background="{StaticResource SuccessGreen}"
                    Margin="0,0,12,0"/>
            <Button Content="Close" 
                    IsCancel="True"
                    Click="Close_Click"
                    Style="{StaticResource PreviewButtonStyle}"
                    Background="{StaticResource DarkCard}"
                    BorderBrush="{StaticResource DarkBorder}"
                    BorderThickness="1"/>
        </StackPanel>
    </Grid>
</Window>